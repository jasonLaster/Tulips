<h1>Editing network</h1>

<% form_for(@network) do |f| %>
  <%= f.error_messages %>

	<p>
		<%= f.label :name %> <br />
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %> <br />
		<%= f.text_field :description %>
	</p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @network %> |
<%= link_to 'Back', networks_path %>