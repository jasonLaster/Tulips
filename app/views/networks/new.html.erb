<div class="header">
	<h2>Create a new network</h2>
</div>

<div class="body">

	<% form_for(@network) do |f| %>
	  <%= f.error_messages %>
	
		<p>
			<%= f.label :name %> <br />
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :description %> <br />
			<%= f.text_field :description %>
		</p>
	
	  <p>
	    <%= f.submit 'Create' %>
	  </p>
	<% end %>
</div>

<div class="footer">
	<%= link_to 'Back', networks_path %>
</div>