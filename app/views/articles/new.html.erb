<h1>New article</h1>

<p> <%= @article.network.name %> </p>
<p> <%= @article.poster%>

<% form_for @article do |f| %>
  <%= f.error_messages %>
	
	<p>
		<%= f.label :title %> <br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :url %> <br />
		<%= f.text_field :url %>
	</p>
	<p>
		<%= f.label :source %> <br />
		<%= f.text_field :source %>
	</p>
	<p>
		<%= f.label :description %> <br />
		<%= f.text_area :description %>
	</p>
	
	<p>
    <%= f.submit 'Create' %>
  </p>

<% end %>

